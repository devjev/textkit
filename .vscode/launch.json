  "version": "0.2.0",
  "configurations": [
    {
      "name": "(Windows) Launch",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceRoot}/target/debug/textkit.exe",
      "args": [
        "docx-template",
        "-t",
        "data/dry-run-example.docx",
        "-j",
        "data/data.json",
        "-o",
        "result.docx"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceRoot}",
      "environment": [],
      "externalConsole": true
    }
  ]
}
